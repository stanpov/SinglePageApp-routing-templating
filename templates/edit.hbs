 {{>header}}
 <section id="viewEditdestination">
            <h2>Edit existing destination</h2>
            <form id="formAdddestination" action="#/edit/{{event.id}}" method="POST">
                <label for="destination">Destination name:</label>
                <input type="text" id="destination" name="destination" value="{{event.destination}}">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="{{event.city}}">
                <label for="duration">Duration:</label>
                <input type="number" id="duration" name="duration" value="{{event.duration}}">
                <label for="departureDate">Departure Date:</label>
                <input type="date" id="departureDate" name="departureDate" value="{{event.departureDate}}">
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl"
                    value="{{event.imgUrl}}">

                <input type="submit" class="create" value="Edit">
            </form>
        </section>
        {{>footer}}