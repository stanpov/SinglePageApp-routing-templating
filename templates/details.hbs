{{>header}}
<section id="viewdestinationDetails">
            <div class="destination-area">
                <div class="destination-area-left">
                    <img src="{{event.imgUrl}}"
                        alt="">
                </div>
                <div class="destination-area-right">
                    <h3>{{event.destination}}</h3>
                    <div>to {{event.city}}</div>
                    <div class="data-and-time">
                        {{event.departureDate}}
                        {{#if event.imTheCreator}}
                        <a href="#/edit/{{event.id}}" method="GET" class="edit-destination-detail"></a>
                        {{else}}
                        {{/if}}
                    </div>
                    <div>
                        {{event.duration}}
                    </div>
                </div>
            </div>
        </section>
        {{>footer}}